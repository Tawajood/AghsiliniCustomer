<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_slider"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_content_slider"
             android:src="@drawable/i1" />

        <TextView
            android:id="@+id/tv_title_slider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignBottom="@id/img_slider"
             app:layout_constraintBottom_toBottomOf="@id/img_slider"
            app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/tv_content_slider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_50sdp"
             android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
            android:minLines="2"
            android:text="@string/walk_througt_body_first"
            android:singleLine="false"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_50sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_centerHorizontal="true"
             android:textColor="@color/grey_700"
            android:textSize="@dimen/_11sdp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>